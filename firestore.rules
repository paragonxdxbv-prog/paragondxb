rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      // Allow if email matches admin email
      return request.auth != null && (
        request.auth.token.email == 'paragonxdxbv@gmail.com' ||
        // Also checks if custom claim is set (for future proofing)
        request.auth.token.admin == true
      );
    }

    // Helper to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection - public read, admin write only
    match /products/{productId} {
      allow read: if true; 
      allow write: if isAdmin();
    }
    
    // Categories/Settings/Content/Announcement - public read, admin write
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /content/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users collection - Owner read/write, Admin read/write
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Tickets System (Concierge & Support)
    match /tickets/{ticketId} {
      // Allow read if user is owner of the ticket or is admin
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Allow create if user sets their own userId
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns ticket (e.g. marking read) or admin
      allow update: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Allow admin to delete tickets
      allow delete: if isAdmin();
      
      // Messages Subcollection
      match /messages/{messageId} {
        // Read: Check parent ticket's userId
        allow read: if (request.auth != null && get(/databases/$(database)/documents/tickets/$(ticketId)).data.userId == request.auth.uid) || isAdmin();
        
        // Create: Check parent ticket's userId
        allow create: if (request.auth != null && get(/databases/$(database)/documents/tickets/$(ticketId)).data.userId == request.auth.uid) || isAdmin();
      }
    }
    
    // Analytics - Public create (for logging events), Admin read/manage
    match /analytics/{document=**} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Admin Logs & AI Logs
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }
    match /ai_logs/{logId} {
      allow read, write: if isAdmin();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
