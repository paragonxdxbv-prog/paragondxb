rules_version = '2';

// Firebase Storage Rules for APEX AUTO
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@paragondxb.com' ||
        request.auth.token.email == 'chiru@paragondxb.com' ||
        request.auth.token.admin == true
      );
    }
    
    // Product images - public read, admin write
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User uploads - owner/admin read and write
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Content/Settings images - public read, admin write
    match /content/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
